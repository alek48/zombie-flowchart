declare enum PotentialOutcome 
	DEAD("You are dead!"), MARTY("You are Marty McFly");
	fullInfo : String;
end

declare Message
	contents : String
end

declare Outcome
	finalOutcome : PotentialOutcome

end

declare Answer
	question : String
	answers : String[]
